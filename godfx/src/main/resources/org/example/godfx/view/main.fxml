<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.godfx.MainController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20px; -fx-background-color: #11111b;" BorderPane.alignment="CENTER">
            <Label styleClass="header-label" text="Govt Open Data (GOD) Platform" />
            <HBox alignment="CENTER" spacing="20.0">
                <Button mnemonicParsing="false" onAction="#onRefreshResourcesButtonClick" text="Refresh Resources" />
                <Button mnemonicParsing="false" onAction="#onLoadResourcesButtonClick" text="Load Resources" />
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.25" style="-fx-padding: 10px;" BorderPane.alignment="CENTER">
            <items>
                <Accordion id="leftAccordion">
                    <panes>
                        <TitledPane fx:id="orgPane" animated="true" text="Organizations">
                            <content>
                                <ListView fx:id="orgListView" />
                            </content>
                        </TitledPane>
                        <TitledPane fx:id="sectorPane" animated="true" text="Sectors">
                            <content>
                                <ListView fx:id="sectorListView" />
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
                <ScrollPane id="centerScrollPane" fx:id="centerScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #1e1e2e;">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></ScrollPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
